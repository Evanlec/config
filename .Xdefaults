! Cursor theme
Xcursor*theme: Bluecurve

! Terminal fonts
!*font: -*-terminus-medium-*-*-*-12-*-*-*-*-*-*-*
!*boldFont: -*-terminus-medium-*-*-*-12-*-*-*-*-*-*-*
!urxvt.font: xft:Inconsolata:pixelsize=15
!urxvt.boldFont:	xft:Inconsolata:bold:pixelsize=15
*font: xft:monaco:size=10 
*boldFont: xft:monaco:bold:size=10

!Main rxvt options
URxvt*scrollBar: false
URxvt*geometry: 100x30
URxvt*depth: 24
URxvt*jumpScroll: true
URxvt*skipScroll: true
URxvt*scrollTtyOutput: false
URxvt*scrollWithBuffer: false
URxvt*scrollTtyKeyPress: true
URxvt*saveLines: 10000
URxvt*visualBell: false
URxvt*urgentOnBell: true
URxvt*buffered: true
!URxvt*background: rgba:0000/0000/0000/9999
URxvt*background: black
!URxvt*foreground: White 
urxvt.foreground: #cccccc
URxvt*transparent: false
URxvt*fading: 15%
URxvt*fadeColor: #3a3a3a
URxvt*shading: 75
URxvt*intensityStyles: true
URxvt*internalBorder: 5
URxvt*externalBorder: 5
!URxvt*lineSpace: 2
URxvt*borderLess: false
URxvt*termName: rxvt-256color
URxvt*borderColor: #000000
URxvt*iconFile:	/home/el/.icons/terminal.xpm
URxvt*tripleclickwords: true
URxvt*insecure: true
! make urls appear in pretty color
URxvt*colorUL: #00ff5f
URxvt*pointerBlank: true
!URxvt*cursorColor: #4a54A3

! Perl stuffs
URxvt*perl-ext-common: default,-option-popup,selection-autotransform
URxvt*perl-ext: matcher,selection-pastebin
!matcher,selection,selection-popup,selection-autotransform,searchable-scrollback,readline,kuake,selection-pastebin
URxvt*urlLauncher: google-chrome
URxvt*matcher.button: 1
URxvt*matcher.pattern.1: \\bwww\\.[\\w-]+\\.[\\w./?&@#-]*[\\w/-]

!=================================================================!
! Main xterm options
XTerm*Geometry: 100x60
XTerm*background: Black
XTerm*foreground: White
XTerm*scrollBar: false
XTerm*termName: xterm-256color

