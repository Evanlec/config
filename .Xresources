! font settings suggested by infinality
Xft.autohint: 0
Xft.lcdfilter:  lcddefault
Xft.hintstyle:  hintfull
Xft.hinting: 1
Xft.antialias: 1
Xft.dpi: 96
Xft.rgba: rgb

! Cursor theme
!Xcursor*theme: Bluecurve

! Terminal fonts
!*font: -*-terminus-medium-*-*-*-12-*-*-*-*-*-*-*
!*boldFont: -*-terminus-medium-*-*-*-12-*-*-*-*-*-*-*
!urxvt.font: xft:Inconsolata:pixelsize=15
!urxvt.boldFont:	xft:Inconsolata:bold:pixelsize=15
URxvt.font: xft:Menlo-11:antialias=false
#URxvt.font:xft:Liberation Mono-10:antialias=false
!*boldFont: xft:Menlo bold:size=10

!Main rxvt options
URxvt*scrollBar: false
URxvt*geometry: 100x30
URxvt*depth: 24
URxvt*jumpScroll: true
URxvt*skipScroll: true
URxvt*scrollTtyOutput: false
URxvt*scrollWithBuffer: false
URxvt*scrollTtyKeyPress: true
URxvt*saveLines: 10000
URxvt*visualBell: false
URxvt*urgentOnBell: true
URxvt*buffered: true
!URxvt*background: rgba:0000/0000/0000/9999
!URxvt*foreground: White 
urxvt.foreground: #BDBDBD
URxvt.background: rgba:0000/0000/0000/bbbb
URxvt*background: black
URxvt*transparent: false
URxvt*fading: 15%
URxvt*fadeColor: #3a3a3a
URxvt*shading: 75
URxvt*intensityStyles: true
URxvt*internalBorder: 5
URxvt*externalBorder: 5
!URxvt*lineSpace: 2
URxvt*borderLess: false
URxvt*termName: rxvt-256color
URxvt*borderColor: #000000
URxvt*iconFile:	/home/el/.icons/terminal.xpm
URxvt*tripleclickwords: true
URxvt*insecure: true
! make urls appear in pretty color
URxvt*colorUL: #00ff5f
URxvt*pointerBlank: true
!URxvt*cursorColor: #4a54A3

! Perl stuffs
URxvt*perl-ext-common: default,-option-popup,selection-autotransform
URxvt*perl-ext: matcher,selection-pastebin
!matcher,selection,selection-popup,selection-autotransform,searchable-scrollback,readline,kuake,selection-pastebin
URxvt*urlLauncher: google-chrome
URxvt*matcher.button: 1
URxvt*matcher.pattern.1: \\bwww\\.[\\w-]+\\.[\\w./?&@#-]*[\\w/-]

!=================================================================!
! Main xterm options
XTerm*Geometry: 100x60
xterm*bellIsUrgent: true
XTerm*background: Black
xterm*foreground: grey85
xterm*highlightTextColor:  grey10
xterm*highlightColor:  lightgreen
xterm*dynamicColors: true
XTerm*scrollBar: false
xterm*trimSelection: true
xterm*charClass:33:48,35:48,37-38:48,39:43,42-47:48,58-59:48,61:48,63-64:48,124:1,126:48
xterm*renderFont: true
xterm*saveLines: 0
xterm*backarrowKey: false
xterm*metaSendsEscape: true
xterm*locale: true
XTerm*termName: xterm-256color
xterm*utf8: 1
xterm*faceName:Droid Sans Mono Slashed
xterm*faceSize: 12
xterm*boldMode: false
!*xterm*background: grey3*/

